<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MapActivity"
    android:background="@color/backgroundMap" android:id="@+id/ctlMap">

    <ImageView
        android:id="@+id/imgMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="@dimen/BASE_SCALE"
        android:scaleY="@dimen/BASE_SCALE"
        android:src="@drawable/andromia" />

    <Button
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:translationX="-20"
        android:background="@drawable/point_position"/>
</android.support.constraint.ConstraintLayout>